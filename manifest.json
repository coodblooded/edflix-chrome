{
  "manifest_version": 2,
  "name": "EdFlix",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/watch?v=*"],
      "css": ["css/bootstrap.min.css"],
      "js": ["js/bootstrap.min.js", "js/underscore-min.js", "js/knockout-min.js", "content.js", "EdFlixButton.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "tabs"]
}
